<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B4D5"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="4dp"
        android:text="To Main"
        android:background="#FFF"
        android:textColor="#000"
        android:id="@+id/buttonToMain"
        android:onClick="ToMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="N/A"
        android:background="#000"
        android:textColor="#FFF"
        android:id="@+id/buttonNA"
        android:layout_toEndOf="@+id/buttonToMain"
        android:layout_below="@+id/buttonToMain"
        android:layout_alignLeft="@+id/buttonToMain"
        android:layout_alignStart="@+id/buttonToMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="4dp"
        android:text="To Swipe Tabs"
        android:background="#000"
        android:textColor="#FFF"
        android:id="@+id/buttonToTab"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonToMain"
        android:layout_toEndOf="@+id/buttonToMain" />
</RelativeLayout>